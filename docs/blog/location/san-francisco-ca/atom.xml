  <entry xml:base="http://ablog.readthedocs.org\blog\location\san-francisco-ca\atom.xml">
    <title type="text">ABlog v0.2.1 released</title>
    <id>http://ablog.readthedocs.org\release/ablog-v0.2-released.html#ablog-v0-2-1-released</id>
